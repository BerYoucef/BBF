
    <!-- Main Container -->
    <div class="main-container">
     
        <!-- Product Section -->
        <div class="product-section">
            <div class="product-grid">
                <div class="product-image">
                    <img src="<%- product.img %>" alt="<%- product.name %>">
                </div>
                <div class="product-details">
                    <h1 class="product-title"><%- product.name %></h1>
                    <div class="product-price"><%- product.price %></div>
                    <div class="product-description">
                        <p><%- product.description %></p>
                    </div>
                    
                    <div class="rating-section">
                        <div class="rating-header">
                            <div>
                                <div class="rating-average"><%- product.rating_average %></div>
                                <div class="stars">
                                    <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
                                </div>
                            </div>
                            <div class="total-reviews">(<%- product.reviews %> reviews)</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Comments Section -->
        <div class="comments-section">
            <h2 class="section-title">Customer Reviews</h2>
            <div class="comments-grid">   
                    <!-- comments-->
                 <% product.comments.forEach(c => { %>
                <div class="comment-card">
                    <div class="comment-header">
                        <div class="user-avatar"><%= c.avatar %></div>
                        <div class="user-info">
                            <div class="user-name"><%= c.name %></div>
                            <div class="comment-date"><%= c.date %></div>
                        </div>
                    </div>
                    <div class="comment-stars">
                        <% for (let i = 0; i < c.stars; i++) { %>
                            <span>★</span>
                        <% } %>
                        <% for (let i = c.stars; i < 5; i++) { %>
                            <span>☆</span>
                        <% } %>
                    </div>
                    <p class="comment-text"><%- c.comment %></p> 
                </div>
            <% }) %>
            </div>
        </div> 

        <!-- Add Comment Section -->
        <div class="add-comment-section">
            <h2 class="add-comment-title">Add Your Review</h2>
            <form class="comment-form">
                <div class="form-group">
                    <label class="form-label">Your Name</label>
                    <input required id="userName" type="text" class="form-input" placeholder="Enter your name">
                </div>
                
                <div class="form-group">
                    <label class="form-label">Rating</label>
                    <div class="rating-input">
                        <span class="star">★</span>
                        <span class="star">★</span>
                        <span class="star">★</span>
                        <span class="star">★</span>
                        <span class="star">★</span>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Review</label>
                    <textarea required id="Review" type="text" class="form-textarea" placeholder="Share your experience with this product..."></textarea>
                </div>
                
                <button type="button" class="submit-btn" id="sendBtn">Submit Review</button>
            </form>
        </div>
    </div>

    <script>       

        // Post request
        document.getElementById('sendBtn').addEventListener('click', function() {
            const userReview = document.getElementById('Review').value;
            const userName = document.getElementById('userName').value;
            const userRating = document.querySelectorAll('.star.active').length;
            const urlparams = new URLSearchParams(window.location.search);
            const product = urlparams.get('productid');

            if (!userName.trim()) {
                alert("Please write Your Name")
                return;
            }
           
            if (!userReview.trim()) {
                alert("Please write a comment")
                return;
            }
        fetch('/product/submit-comment', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ 
                name: userName, 
                rating: userRating, 
                comment: userReview,
                productid: product
            })
        })
        .then(res => {
            if(res.redirected) {
                window.location.href = res.url;
            }
        })
        .catch(err => console.error("Error: ", err));
        });

        // Star rating interaction
        document.querySelectorAll('.star').forEach((star, index) => {
            star.addEventListener('click', function() {
                // Set clicked star and all previous as active
                for (let i = 0; i <= index; i++) {
                    document.querySelectorAll('.star')[i].classList.add('active');
                }
                // Remove active from stars after the clicked one
                for (let i = index + 1; i < document.querySelectorAll('.star').length; i++) {
                    document.querySelectorAll('.star')[i].classList.remove('active');
                }
            });
            
            star.addEventListener('mouseover', function() {
                // Highlight up to current star on hover
                for (let i = 0; i <= index; i++) {
                    document.querySelectorAll('.star')[i].style.color = '#FFC107';
                    document.querySelectorAll('.star')[i].style.transform = 'scale(1.2)';
                }
                // Reset stars after current on hover
                for (let i = index + 1; i < document.querySelectorAll('.star').length; i++) {
                    document.querySelectorAll('.star')[i].style.color = '';
                    document.querySelectorAll('.star')[i].style.transform = '';
                }
            });
            
            document.querySelector('.rating-input').addEventListener('mouseleave', function() {
                // Reset all stars when leaving the container
                document.querySelectorAll('.star').forEach(s => {
                    s.style.color = '';
                    s.style.transform = '';
                });
                
                // Keep active stars active
                document.querySelectorAll('.star.active').forEach(s => {
                    s.style.color = '#FFC107';
                });
            });
        });

        // Comment card interactions
        document.querySelectorAll('.comment-card').forEach(card => {
            card.addEventListener('click', function() {
                this.classList.toggle('expanded');
            });
        });

        // Add fade-out animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fade-out {
                0% { opacity: 1; transform: scale(1); }
                100% { opacity: 0; transform: scale(0); }
            }
        `;
        document.head.appendChild(style);

        // Entrance animations
        window.addEventListener('load', function() {
            // Animate product sections
            const productSections = document.querySelectorAll('.product-grid, .comments-grid, .add-comment-section');
            productSections.forEach((section, index) => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(30px)';
                
                setTimeout(() => {
                    section.style.transition = 'all 0.6s ease-out';
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, index * 150);
            });
        });
    </script>
</body>
</html>